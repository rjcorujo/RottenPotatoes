-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings_#{rating}", "#{@rating_values[rating] ? 1 : 0 }", @rating_values[rating] == "1", :name => "ratings[#{rating}]"

  - if @title_order
    = hidden_field_tag "title_order", "#{@title_order}"
  - if @date_order
    = hidden_field_tag "release_date_order", "#{@date_order}"
  = submit_tag 'Refresh', :id => "ratings_submit"

  %table#movies
    %thead
      %tr
        %th{:class => @title_order ? "hilite":""}= link_to "Movie Title", movies_path(:title_order => true, :ratings => @rating_values) , {:id => 'title_header'}
        %th Rating
        %th{:class => @date_order ? "hilite":""}= link_to "Release Date", movies_path(:release_date_order =>true, :ratings => @rating_values), {:id => 'release_date_header'}
        %th More Info
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title 
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
